<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="48dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_school_create_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_school_name_input"
        android:paddingTop="16dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_school_create_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:completionThreshold="1"
            android:imeOptions="actionNext"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_school_create_layout1"
        android:hint="@string/hint_school_password">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_school_create_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"

            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>


</RelativeLayout>